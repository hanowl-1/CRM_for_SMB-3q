{
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["icn1"],
  "env": {
    "NODE_ENV": "production"
  },
  "crons": [
    {
      "path": "/api/scheduler/cron",
      "schedule": "* * * * *"
    }
  ],
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 10
    },
    "app/api/scheduler/**/*.ts": {
      "maxDuration": 10
    },
    "app/api/workflow/**/*.ts": {
      "maxDuration": 10
    }
  }
} 